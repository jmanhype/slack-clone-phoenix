# API Configuration
API_BASE_URL=http://localhost:4000/api
WS_URL=ws://localhost:4000/socket

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_APP_ID=your-firebase-app-id

# Development
DEBUG=true
LOG_LEVEL=debug

# Push Notifications
FCM_SENDER_ID=your-fcm-sender-id

# App Configuration
APP_NAME=SlackClone
APP_VERSION=1.0.0
BUNDLE_ID=com.slackclone.mobile

# Backend WebSocket Events
CHANNEL_TOPIC_PREFIX=channel:
USER_TOPIC_PREFIX=user:
WORKSPACE_TOPIC_PREFIX=workspace:

# Storage Configuration
STORAGE_ENCRYPTION_KEY=your-32-character-encryption-key

# Analytics (Optional)
ANALYTICS_ENABLED=false
CRASHLYTICS_ENABLED=false

# Performance
ENABLE_FLIPPER=true
ENABLE_HERMES=true

# Security
CERTIFICATE_PINNING_ENABLED=false
BIOMETRIC_AUTH_ENABLED=true

# Features
VOICE_MESSAGES_ENABLED=true
FILE_UPLOAD_ENABLED=true
BACKGROUND_SYNC_ENABLED=true
OFFLINE_MODE_ENABLED=true